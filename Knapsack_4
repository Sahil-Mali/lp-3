def solve_knapsack():
    val = [50, 100, 150, 200]  # Value array
    wt = [8, 16, 32, 40]       # Weight array
    W = 64                     # Knapsack capacity
    n = len(val) - 1           # Index of last item

    def knapsack(W, n):  # (Remaining Weight, Number of items checked)
        # Base case
        if n < 0 or W <= 0:
            return 0

        # If weight of current item is more than remaining capacity, skip it
        if wt[n] > W:
            return knapsack(W, n - 1)
        else:
            # Return max of including or not including current item
            return max(val[n] + knapsack(W - wt[n], n - 1), knapsack(W, n - 1))

    print("Maximum value in Knapsack =", knapsack(W, n))


if __name__ == "__main__":
    solve_knapsack()
